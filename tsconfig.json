{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@clients/*": ["src/clients/*"],
      "@db/*": ["src/db/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "plugins": [{ "transform": "typescript-transform-paths" }] 
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src"]
}